<h2>Login</h2>
<div class="container">
    <div class="row">
        <h3 class="titulo">Entrar no sistema</h3>
    </div>
    <div class="row">
        <section id="loginForm">
            <form asp-action="Login" asp-controller="Conta" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post" class="form-horizontal">

                <div class="form-group">
                    <label asp-for="Usuario" class="form-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Usuario" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="form-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Senha" class="form-control" type="password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input asp-for="LembrarMe" type="checkbox" />
                        <label asp-for="LembrarMe"></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="btn btn-success" value="Entrar" />
                    </div>
                </div>

            </form>
        </section>

    </div>
</div>
